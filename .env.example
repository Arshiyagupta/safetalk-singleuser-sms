# SafeTalk SMS Service Environment Configuration

# Server Configuration
PORT=8080
NODE_ENV=development
API_VERSION=v1

# Twilio Configuration (SMS Service)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here  
TWILIO_PHONE_NUMBER=+1555XXXXXXX

# OpenAI Configuration (AI Processing)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=500

# Supabase Configuration (Database)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here

# Optional: Logging Configuration
LOG_LEVEL=info

# Optional: Security
WEBHOOK_SECRET=your_webhook_secret_for_additional_security

# Production Domain (for CORS) - Update with your actual deployed URL
PRODUCTION_DOMAIN=https://your-app-name.onrender.com